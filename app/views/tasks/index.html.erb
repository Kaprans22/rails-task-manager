<!-- index.html.erb -->
<div style="padding-top: 20px;">
<div class="container">
  <% if @tasks.any? %>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to task.title, task_path(task) %>
          <span class="badge badge-primary badge-pill"><%= task.completed ? 'Completed' : 'Not Completed' %></span>
          <%= link_to "Update", task_path(task), class: "btn btn-sm btn-warning" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No tasks available.</p>
  <% end %>
</div>
</div>
